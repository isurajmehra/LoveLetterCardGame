<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_item_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/tthoves_demibold"
        android:textColor="@color/colorRoomName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Room Name" />

    <TextView
        android:id="@+id/text_view_item_room_number_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/tthoves_medium"
        android:textColor="@color/colorRoomPersonNumber"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/image_view_item_room_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_item_room_name"
        app:layout_constraintVertical_bias="0.5"
        tools:text="2/4" />

    <ImageView
        android:id="@+id/image_view_item_room_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_person_black_24dp"
        android:tint="@color/colorRoomPersonNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_view_item_room_number_players"
        app:layout_constraintTop_toBottomOf="@+id/text_view_item_room_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_view_item_room_member_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/tthoves_regular"
        android:textColor="@color/colorRoomPersonNumber"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/view_item_room_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/image_view_item_room_person"
        app:layout_constraintTop_toBottomOf="@+id/text_view_item_room_name"
        app:layout_constraintVertical_bias="1"
        tools:text="Members: Mirze,Mehdi,Mirzemehdi" />


    <View
        android:id="@+id/view_item_room_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorSilver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_item_room_person"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>