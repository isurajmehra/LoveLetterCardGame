<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:background="@android:color/transparent"
    android:layout_height="250dp">


    <LinearLayout
        android:id="@+id/container_userBox"
        android:layout_width="match_parent"
        android:background="#E7BBBB"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#692626"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_userBox_playerName"
                android:layout_width="match_parent"
                android:text="Player name"
                android:textColor="#fff"
                android:layout_margin="4dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

            </TextView>

<!--            TokensView-->
            <LinearLayout
                android:id="@+id/linearLayout_userBox_tokensView"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_width="15dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_height="15dp">

                </ImageView>
                <ImageView

                    android:layout_width="15dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_height="15dp">

                </ImageView>
                <ImageView

                    android:layout_width="15dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_height="15dp">

                </ImageView>
                <ImageView

                    android:layout_width="15dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_height="15dp">

                </ImageView>






            </LinearLayout>



        </LinearLayout>



    </LinearLayout>



    <ImageView
        android:id="@+id/imageView_userBox_isInGame"
        android:layout_width="30dp"
        android:background="#00ff00"
        android:layout_height="30dp">

    </ImageView>

</FrameLayout>